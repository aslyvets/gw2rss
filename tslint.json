{
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "defaultSeverity": "error",
  "rules": {
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "arrow-parens": false,
    "object-literal-shorthand": false,
    "no-namespace": false,
    "jsx-no-multiline-js": false,
    "jsx-alignment": false,
    "max-line-length": [
      false
    ],
    "align": false,
    "no-var-requires": false,
    "interface-over-type-literal": false,
    "ban-types": false,
    "interface-name": false,
    "eofline": true,
    "member-ordering": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "ignore",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ]
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  }
}
